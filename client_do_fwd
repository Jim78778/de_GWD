    green "=============================="
    read CFemail

clifwd_domain=$(echo $clifwd_domainP | cut -d : -f1)
clifwd_port=$(echo $clifwd_domainP | cut -d : -f2)
topDomain=$(echo $clifwd_domain | rev | awk -F. '{print $1"."$2}' | rev)

